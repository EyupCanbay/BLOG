<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kayıt Ol</title>
    <link rel="stylesheet" href="/stylesRegister.css">
</head>
<body>
    <div class="container">
        <h1>Kayıt Ol</h1>
        <form id="register-form" action="/register" method="POST" class="register-form">
            <div class="input-group">
                <label for="firstName">Adınız Soyadınız</label>
                <input type="text" id="firstName" name="nameSurname" required>
            </div>
            <div class="input-group">
                <label for="email">E-posta</label>
                <input type="email" id="email" name="email" required>
            </div>
            <div class="input-group">
                <label for="password">Şifre</label>
                <input type="password" id="password" name="password" required>
            </div>
            <div class="input-group">
                <label for="confirmPassword">Şifreyi Onayla</label>
                <input type="password" id="confirmPassword" name="confirmPassword" required>
            </div>

            <p id="error-message" style="color:red;"></p>

            <script>

                const form = document.getElementById('register-form');
                form.addEventListener('submit', function(event) {
                    const password = document.getElementById('password').value;
                    const confirmPassword = document.getElementById('confirmPassword').value;
                    const errorMessage = document.getElementById('error-message');

                    if(password !== confirmPassword){
                        event.preventDefault();
                        errorMessage.textContent='şifreler eşleşmiyor'
                    }
                });


            </script>
            <button type="submit" class="submit-button">Kayıt Ol</button>
        </form>

        <div class="login-link">
            <p>Zaten bir hesabınız var mı? <a href="/login">Giriş Yap</a></p>
        </div>
    </div>
</body>
</html>
